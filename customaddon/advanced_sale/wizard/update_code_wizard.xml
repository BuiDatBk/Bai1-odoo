<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="update_code_form_view" model="ir.ui.view">
            <field name="name">Update Code</field>
            <field name="model">update.code.wizard</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <group>
                        <field name="discount_code"/>
                    </group>

                    <footer>
                        <button string='Update'
                                type='object'
                                name='add_discount_code'
                                class='btn-primary'/>
                        <button string='Cancel'
                                class='btn-default'
                                special='cancel'/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>