<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"
            />
            <field name="arch" type="xml">
                <field name="website" position="after">
                    <field name="customer_discount_code"/>
                </field>
            </field>
        </record>

        <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="." position="inside">
                    <filter string="Discount Code" name="Discount Code"
                            domain="[('customer_discount_code','!=',False)]"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_tree" model="ir.ui.view">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"
            />
            <field name="arch" type="xml">
                <field name="city" position="after">
                    <field name="customer_discount_code"/>
                </field>
            </field>
        </record>


        <record id="mass_update_discount_code" model="ir.actions.server">
            <field name="name">Update Code</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.add_discount_code()</field>
        </record>
    </data>
</odoo>